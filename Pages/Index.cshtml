@page
@using Project_PRN221.Model
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thời Khóa Biểu</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: center;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>

    <h2> Book Room</h2>
    <form method="post">
        <label for="avatar">Choose a profile picture:</label>

        <input type="file" id="file" name="file" accept=".csv" />

        <button type="submit">ShowData</button>
    </form>
    <table>
        <thead>
            <tr>
                <th>Room</th>
                <th>TimeSlot</th>
                <th>Class</th>
                <th>Subject</th>
                <th>Teacher</th>
            </tr>
        </thead>
        <tbody>
            @foreach(ClassModel c in Model.listClass)
            {
                <tr>
                    <td>@c.Room</td>
                    <td>@c.TimeSlot</td>
                    <td>@c.Class</td>
                    <td>@c.Subject</td>
                    <td>@c.Teacher</td>
                    <td><a href="/Update?ID=@c.ID&amp;room=@c.Room&amp;timeSlot=@c.TimeSlot&amp;class=@c.Class&amp;subject=@c.Subject&amp;teacher=@c.Teacher">Update</a></td>
                    <td><a href="/Delete?ID=@c.ID">Delete</a></td>
                </tr>
                
            }
            <!--Thêm các hàng dọc cho các phòng học khác-->
        </tbody>
    </table>
        
        <a href="/Create" >Add</a>
        <a href="/Schedule" >Add</a>
 
       

</body>
</html>

